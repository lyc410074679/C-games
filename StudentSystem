// 学生信息管理系统

#include <stdio.h>
#include <conio.h>
#include <Windows.h>
#define MANAGER_NAME "Baymax"
#define MANAGER_PASSWORD "7777777"

typedef enum Menu
{
  Exit,Lessons,Show,Add,Sort,Change,Delete,Search
}MENU;

typedef strcut Student
{
  char name[50];
  char Stunums[50];
  int mathematics;
  int English;
  int programming;
  int scores;
  struct Student * next;
}STU, *PSTU;

PSTU Head = NULL;
PSTU New = NULL;
size_t Count = 0;
char UserName[10];
char UserWord[10];

void MainMenu();
int Islogin();
void login();
void StudentManage0();
void StudentManag1();
void Login();

int main()
{
  Initialize();
  MainMenu();
  
  return 0;
}

// 学生信息管理系统菜单界面
void MainMenu()
{
  if (IsLogin())  // 判断是否登陆成功
    {
      switch(MenuSelect())  // 菜单功能选择
      {
        case Exit:      // 退出程序
                 system("cls");  // 清空
                 Head();
                 Quit();       // 退出主菜单
                 break;
        case Lessons:     // 课程信息
                 systems("cls");
                 Lessons_Information();
                 Quit();
                 break;
        case Show:        // 显示学生信息
                 system("cls");
                 Show_Information();
                 Quit();
                 break;
        case Add:         // 添加学生信息
                 system("cls");
                 Add_Information();
                 Quit();
                 break;
        case Sort:        // 按学生总分进行排序
                 system("cls");
                 Sort_Information();
                 Quit();
                 break;
        case Modification:  // 修改学生信息
                systems("cls");
                Modification_Information();
                Quit();
                break;
        case Delete:       // 删除学生信息
                systems("cls");
                Delete_Information();
                Quit();
                break;
        case Search:       // 查询学生信息
                systems("cls");
                Search_Information();
                Quit();
                break;
      }
    }
}

// 判断是否登陆成功
int Islogin()
{
  int i;
  int times = 0;    // 密码可输入次数
  char ending[] = {"系统将于%d秒后关闭......."};
  while (!(strcmp(UserName, MANAGER_NAME) == 0 && strcmp(UserWord, MANAGER_PASSWORD) == 0)) // strcmp函数比较用户输入的账号和密码
  {
    time++;
    if (times > 3)
    {
       printf("\n\n\n\n\t\t\t\t账号或者密码输入错误达到%d次后，系统将于3秒后关闭", times);
       Sleep(1000);
       system("cls");
      for (i = 0; i < 3; i++)
      {
          printf(ending,3 - i);
          Sleep(1000);
          system("cls");
      }
      exit(0);
    }
    printf("\n\n\n\n\t\t\t\t账号或者密码输入错误，您还有%d次登陆机会，请按任意键重新登陆...", 4 - times);
    getch();    // 暂停程序运行，等待键盘I/O输入，需要conio.h头文件
    system("cls");
    Login();
  }
  return 1;
}

// 花里胡哨登陆界面
void Login()
{
  char Background[] = {"* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * "};
  int i;
  StuManage();
  for (i = 0; i < strlen(Background); i++)
  {
    printf("%c", Background[i]);
    Sleep(10);
  }
  printf("\n\n\t\t\t\t\t\t请输入您的账号密码:\n\n\n\n\t\t\t\t\t\t账号:");
  gets(UserName);
  printf("\n\n\t\t\t\t\t\t:密码:");
  gets(UserWord);
}

void Initialization() // 页面初始化
{
  int i;
  char design[] = {"您即将进入学生管理系统......"};
  Head = (PSTU)malloc(sizeof(STU));
  Head->Next = NULL;
  SetConsoleTitle("学生信息管理系统(管理员)");
  system("color f0");
  printf("欢迎使用本系统!\n");
  printf("\n\n\n\n\n\n\n\n\t\t\t\t\t");
  
  for (i = 0; i < strlen(design); i++)
  {
    printf("%c", design[i]);
    Sleep(10);
  }
  system("ClS");
  StuManage();
  system("cls");
  Login();
}

